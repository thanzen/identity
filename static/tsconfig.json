{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "files": [
        "events/events.ts",
        "libs/typings/amazeui-react.d.ts",
        "libs/typings/classnames.d.ts",
        "libs/typings/react-addons-update.d.ts",
        "libs/typings/react-bootstrap.d.ts",
        "libs/typings/react-dom.d.ts",
        "libs/typings/react-redux.d.ts",
        "libs/typings/react-router.d.ts",
        "libs/typings/react.d.ts",
        "libs/typings/redux.d.ts",
        "libs/typings/reselect.d.ts",
        "modules/admin/actions/adminActions.ts",
        "modules/admin/eventType.ts",
        "modules/admin/models/permission.ts",
        "modules/admin/models/role.ts",
        "modules/admin/models/user.ts",
        "modules/admin/services/admin.ts",
        "modules/admin/stores/roleStore.ts",
        "modules/admin/stores/userStore.ts",
        "src/components/index.ts",
        "src/pages/index.ts",
        "modules/admin/components/role/RoleComposer.tsx",
        "modules/admin/components/role/RoleForm.tsx",
        "modules/admin/components/role/RoleListItem.tsx",
        "modules/admin/components/role/SearchBar.tsx",
        "modules/admin/components/user/UserRow.tsx",
        "modules/admin/components/user/UserTable.tsx",
        "src/BaseComponent.tsx",
        "src/components/Header.tsx",
        "src/components/PageContainer.tsx",
        "src/containers/Index.tsx",
        "src/containers/public/Index.tsx",
        "src/containers/public/main.tsx",
        "src/containers/public/Page.tsx",
        "src/pages/Home.tsx"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
